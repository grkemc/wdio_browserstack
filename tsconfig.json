{
    "compilerOptions": {
        "sourceMap": false,
        "target": "es2020",
        "module": "NodeNext",
        "moduleResolution": "Node16",
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "types": [
            "node",
            "@wdio/types",
            "@wdio/globals/types",
            "@wdio/mocha-framework",
            "expect-webdriverio"
        ],
        "baseUrl": "./",
        "paths": {
            "@config/*": ["config/*"],
            "@tests/*": ["tests/*"]
        }
    },
    "include": [
        "./config/**/*.ts",
        "./tests/**/*.ts",
        "./node_modules/tsconfig-paths/register",
        "./tests/features/**/*.ts",
        "./tests/steps/**/*.ts"
    ]
}
